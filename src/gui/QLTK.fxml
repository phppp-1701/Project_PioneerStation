<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javfx.com/fxml/1" fx:controller="com.example.QuanLyTaiKhoanController">
    <!-- Header -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="QUẢN LÝ TÀI KHOẢN" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center: TableView và Form -->
    <center>
        <SplitPane dividerPositions="0.7">
            <!-- Bảng danh sách tài khoản -->
            <VBox>
                <TableView fx:id="tableViewTaiKhoan">
                    <columns>
                        <TableColumn text="ID" fx:id="colID" prefWidth="50"/>
                        <TableColumn text="Tên đăng nhập" fx:id="colUsername" prefWidth="150"/>
                        <TableColumn text="Họ và tên" fx:id="colFullName" prefWidth="200"/>
                        <TableColumn text="Vai trò" fx:id="colRole" prefWidth="100"/>
                        <TableColumn text="Trạng thái" fx:id="colStatus" prefWidth="100"/>
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                    <Button text="Thêm" fx:id="btnThem" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="Sửa" fx:id="btnSua" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                    <Button text="Xóa" fx:id="btnXoa" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                    <Button text="Làm mới" fx:id="btnRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Form thêm/sửa tài khoản -->
            <VBox spacing="10" style="-fx-padding: 20;">
                <Label text="THÔNG TIN TÀI KHOẢN" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                <GridPane hgap="10" vgap="10">
                    <Label text="Tên đăng nhập:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Mật khẩu:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Họ và tên:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtFullName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Vai trò:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbRole" GridPane.rowIndex="3" GridPane.columnIndex="1">
                       
                    </ComboBox>

                    <Label text="Trạng thái:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="chkActive" text="Kích hoạt" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>
                <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                    <Button text="Lưu" fx:id="btnLuu" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                    <Button text="Hủy" fx:id="btnHuy" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Label text="Tổng số tài khoản: " fx:id="lblTongSo" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>

